<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mood_schema"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/happy"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/mood_item_feel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domyślne uczucie"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mood_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domyślny typ"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/mood_item_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":D"
            android:textSize="36sp" />

        <RatingBar
            android:id="@+id/mood_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="true"
            android:scaleX="0.7"
            android:scaleY="0.7" />
    </LinearLayout>
</LinearLayout>
